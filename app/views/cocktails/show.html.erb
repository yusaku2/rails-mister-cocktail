<div class="container">
  <div class="row">
    <div class="col-xs col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to "delete", method: :delete, data: {confirm: "Are you sure?"}  %>
          <%= link_to "Create a Dose", new_cocktail_dose_path(@cocktail)  %>

          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
